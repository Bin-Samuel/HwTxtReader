<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shape_chapter_msg"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxLines="1"
            android:id="@+id/chapter_name"
            android:ellipsize="end"
            android:textSize="@dimen/s_dp_15"
            android:textColor="@color/color_withe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chapter_progress"
            android:maxLines="1"
            android:layout_marginTop="@dimen/s_dp_5"
            android:textColor="#99cdcbcb"
            android:text="@string/zero_percent"
            android:textSize="@dimen/s_dp_12"
            android:ellipsize="end"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>